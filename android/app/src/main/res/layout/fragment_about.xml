<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Logo do Instituto Infnet"
            android:src="@drawable/ic_infnet" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Instituto Infnet"
            android:text="Instituto Infnet"
            android:textAlignment="center"
            android:textSize="36sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Engenharia de Software"
            android:text="Engenharia de Software"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:contentDescription="Disciplinas"
            android:paddingLeft="8dp"
            android:text="\n• Desenvolvimento de Interfaces Android\n• Fundamentos do Desenvolvimento Android\n• Desenvolvimento Kotlin: Android\n• Segurança, Monetização e Publicação de Aplicativos Android\n• Projeto de Bloco: Desenvolvimento Android\n\n(*)Atualizado para a Disciplina:\n• Projeto de Bloco: Engenharia Disciplinada de Softwares"
            android:textSize="15sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="Aluno: Nelson Idehara" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:text="Professores: Denis Cople / Jonh Carvalho / (Armênio Cardoso)" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Abril/2022\n(Janeiro/2024)"
            android:textAlignment="textEnd" />
    </LinearLayout>

</FrameLayout>